<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient_name"
            android:textColor="#fff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patienname_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" - "
            android:textColor="#fff" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/operation_details"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="120dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="SI.No"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />

                        <TextView
                            android:layout_width="240dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="@string/operation_name"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />

                        <TextView
                            android:layout_width="160dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="@string/operationdate"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />

                        <TextView
                            android:layout_width="160dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="@string/from_time"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="185dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="@string/to_time"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextView05"
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />

                        <TextView
                            android:id="@+id/TextView04"
                            android:layout_width="160dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="@string/doctor_name"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />


                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="2dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyler_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#fff"
                    android:scrollbars="none"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/prescription_details"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp">

                        <TextView
                            android:layout_width="120dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="Sl.No"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />

                        <TextView
                            android:layout_width="240dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="@string/medicine_name"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />

                        <TextView
                            android:layout_width="160dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="@string/interval"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />

                        <TextView
                            android:layout_width="160dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="@string/frequency"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />

                        <TextView
                            android:layout_width="185dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="@string/duration"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />

                        <TextView
                            android:layout_width="185dip"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="#3d5987"
                            android:gravity="center"
                            android:padding="20dip"
                            android:text="@string/doctor_name"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="1dip"
                            android:layout_height="match_parent"
                            android:background="#ffffff" />

                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="2dp">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyler_view_prescription"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#fff"
                    android:scrollbars="none"
                    android:visibility="visible" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
