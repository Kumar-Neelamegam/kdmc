<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp">

                    <TextView
                        android:id="@+id/text_1"
                        android:layout_width="120dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#3d5987"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Sl.No"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#ffffff" />

                    <TextView
                        android:id="@+id/text_2"
                        android:layout_width="240dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Doctor"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/text_3"
                        android:layout_width="160dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Operation Notes"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/text_4"
                        android:layout_width="160dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Position"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/text_5"
                        android:layout_width="185dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Operation Procedure"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/text_6"
                        android:layout_width="160dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Post Operative Diagnosis"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/text_7"
                        android:layout_width="160dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Post Operative Instruction"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/text_8"
                        android:layout_width="160dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Closure"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <TextView
                        android:id="@+id/text_9"
                        android:layout_width="160dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="pre Operative Diagnosis"
                        android:textColor="#000"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="#000" />

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/text_10"
                        android:layout_width="160dip"
                        android:layout_height="150dip"
                        android:layout_weight="1"
                        android:background="#fff"
                        android:gravity="center"
                        android:padding="20dip"
                        android:text="Remarks"
                        android:textColor="#000"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
