<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#939598"
                    android:gravity="left"
                    android:text="@string/notes"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_surgery_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:focusableInTouchMode="false"
                    android:inputType="date"
                    android:singleLine="true">

                </EditText>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/pre_operative_diagnosis"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur1"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/operative_notes"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur2"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/position"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur3"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/procedure"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur4"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/closure"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur5"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/post_operative_diagnosis"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur6"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#939598"
                    android:gravity="left"
                    android:text="@string/treatment"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/surgeon"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur7"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/anaesthetist"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur8"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/asst"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur9"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/blood_loss"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur10"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/histo_pathological_diagnosis"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur11"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="Verdana"
                    android:text="@string/post_op_instruction"
                    android:textColor="#3d5987" />

                <EditText
                    android:id="@+id/edt_sur12"
                    android:layout_width="fill_parent"
                    android:layout_height="200dip"
                    android:background="@drawable/bk"
                    android:gravity="top|left"
                    android:inputType="textMultiLine"
                    android:isScrollContainer="true"
                    android:scrollHorizontally="false"
                    android:singleLine="false" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <Button
                android:id="@+id/btn_submit"
                style="@style/PositiveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="@string/save" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>