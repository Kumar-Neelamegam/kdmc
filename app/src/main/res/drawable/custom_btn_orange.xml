<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="5dip" />
            <stroke android:width="2dip" android:color="#3d5987" />
            <gradient android:angle="-90" android:endColor="#939598" android:startColor="#939598" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#939598" />
            <solid android:color="#939598" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#003f72" />
            <gradient android:angle="90" android:endColor="#3d5987" android:startColor="#3d5987" />
        </shape>
    </item>
</selector>